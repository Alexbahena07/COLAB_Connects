// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AccountType {
  STUDENT
  COMPANY
}

enum NotificationType {
  NEW_JOB
}

enum NotificationFrequency {
  NONE
  DAILY
  WEEKLY
}

model User {
  id                    String                @id @default(cuid())
  name                  String?
  email                 String?               @unique
  emailVerified         DateTime?
  image                 String?
  password              String?
  accountType           AccountType           @default(STUDENT)
  notificationFrequency NotificationFrequency @default(WEEKLY)
  linkedinUrl           String?
  linkedinId            String?               @unique

  // Existing NextAuth relations
  accounts Account[]
  sessions Session[]

  // ðŸ”½ Add these back-relations for your profile data
  profile              Profile?
  companyProfile       CompanyProfile?
  degrees              Degree[]
  certificates         Certificate[]
  experiences          Experience[]
  userSkills           UserSkill[]
  jobs                 Job[]
  jobApplications      JobApplication[] @relation("ApplicantApplications")
  receivedApplications JobApplication[] @relation("CompanyApplications")
  companyFollows       CompanyFollow[]  @relation("CompanyFollows")
  companyFollowers     CompanyFollow[]  @relation("CompanyFollowers")
  notifications        Notification[]   @relation("UserNotifications")

  //for notifications
  postedJobEvents      JobPostEvent[] @relation("UserPostedJobEvents")
  companyJobPostEvents JobPostEvent[] @relation("CompanyPostedJobEvents")
  sentNotifications    Notification[] @relation("CompanyNotifications")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Profile {
  id              String  @id @default(cuid())
  userId          String  @unique
  firstName       String?
  lastName        String?
  headline        String?
  desiredLocation String? // renamed from location
  resumeFileName  String?
  resumeFileType  String?
  resumeData      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Degree {
  id        String    @id @default(cuid())
  userId    String
  school    String
  degree    String?
  field     String?
  startDate DateTime?
  endDate   DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Certificate {
  id             String    @id @default(cuid())
  userId         String
  name           String
  issuer         String?
  issuedAt       DateTime?
  expirationDate DateTime?
  credentialId   String?
  credentialUrl  String?
  externalId     String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, externalId])
  @@index([userId])
}

model Experience {
  id             String    @id @default(cuid())
  userId         String
  title          String
  company        String
  startDate      DateTime?
  endDate        DateTime?
  location       String?
  employmentType String?
  description    String?
  externalId     String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, externalId])
  @@index([userId])
}

/**
 * NEW: define Skill (referenced by UserSkill)
 */
model Skill {
  id         String      @id @default(cuid())
  name       String      @unique
  userSkills UserSkill[]
  jobSkills  JobSkill[]
}

/**
 * SINGLE definition of UserSkill (no level)
 */
model UserSkill {
  id      String @id @default(cuid())
  userId  String
  skillId String
  years   Int?

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  skill Skill @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@unique([userId, skillId])
  @@index([userId])
}

model CompanyProfile {
  id           String  @id @default(cuid())
  userId       String  @unique
  companyName  String
  website      String?
  headquarters String?
  teamSize     String?
  hiringFocus  String?
  about        String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum JobType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERNSHIP
}

model Job {
  id          String   @id @default(cuid())
  companyId   String
  title       String
  location    String
  type        JobType
  remote      Boolean  @default(false)
  description String
  postedAt    DateTime @default(now())

  company      User             @relation(fields: [companyId], references: [id], onDelete: Cascade)
  skills       JobSkill[]
  applications JobApplication[]

  //for notifications
  jobPostEvents JobPostEvent[]
  notifications Notification[]

  @@index([companyId])
  @@index([postedAt])
}

model JobSkill {
  id      String @id @default(cuid())
  jobId   String
  skillId String

  job   Job   @relation(fields: [jobId], references: [id], onDelete: Cascade)
  skill Skill @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@unique([jobId, skillId])
  @@index([jobId])
}

model JobApplication {
  id          String   @id @default(cuid())
  jobId       String
  applicantId String
  companyId   String?
  status      String   @default("SUBMITTED")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  job       Job   @relation(fields: [jobId], references: [id], onDelete: Cascade)
  applicant User  @relation("ApplicantApplications", fields: [applicantId], references: [id], onDelete: Cascade)
  company   User? @relation("CompanyApplications", fields: [companyId], references: [id], onDelete: SetNull)

  @@unique([jobId, applicantId])
  @@index([companyId])
  @@index([applicantId])
}

model CompanyFollow {
  id        String   @id @default(cuid())
  userId    String
  companyId String
  createdAt DateTime @default(now())

  user    User @relation("CompanyFollows", fields: [userId], references: [id], onDelete: Cascade)
  company User @relation("CompanyFollowers", fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([userId, companyId])
  @@index([companyId])
  @@index([userId])
}

model JobPostEvent {
  id        String   @id @default(cuid())
  userId    String
  companyId String
  jobId     String
  jobTitle  String
  createdAt DateTime @default(now())
  emailedAt DateTime?

  user    User @relation("UserPostedJobEvents", fields: [userId], references: [id], onDelete: Cascade)
  company User @relation("CompanyPostedJobEvents", fields: [companyId], references: [id], onDelete: Cascade)
  job     Job  @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([companyId])
  @@index([jobId])
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  jobId     String?
  companyId String?
  jobTitle  String?
  readAt    DateTime?
  createdAt DateTime         @default(now())

  user    User  @relation("UserNotifications", fields: [userId], references: [id], onDelete: Cascade)
  job     Job?  @relation(fields: [jobId], references: [id], onDelete: Cascade)
  company User? @relation("CompanyNotifications", fields: [companyId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([companyId])
  @@index([jobId])
  @@index([readAt])
}
